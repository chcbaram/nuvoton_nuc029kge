    "version": "0.2.0",
    "configurations": [
      {
        "cwd": "${workspaceFolder}",
        "executable": "./build/nuc029kge_fw.elf",
        "name": "Debug with PyOCD",
        "request": "launch",
        "type": "cortex-debug",
        "runToEntryPoint": "main",
        "showDevDebugOutput": "none",
        "servertype": "pyocd",
        "postRestartCommands": [        
          "break main",
          "continue"
        ],        
      },

        {
            "cwd": "${workspaceRoot}",
            "executable": "./build/nuc029kge_fw.elf",
            "name": "Debug with OpenOCD for Win",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            //"toolchainPath": "D:/tools/build_tools/gcc-arm-none-eabi-10-2020-q4-major/bin",
            "serverpath": "C:\\Program Files (x86)\\Nuvoton Tools\\OpenOCD\\bin\\openocd.exe",
            "searchDir": ["C:\\Program Files (x86)\\Nuvoton Tools\\OpenOCD\\scripts"],            
            "configFiles": [
                "interface/nulink.cfg",
                "target/numicroM0.cfg",
            ],
            "interface": "swd",
            "device": "NUC029KGE",
            "runToEntryPoint": "main",
            "showDevDebugOutput" :"none",
            "postRestartCommands": [        
                "break main",
                "monitor reset halt"
              ],
            "overrideLaunchCommands": [
                "set mem inaccessible-by-default off",
                "-enable-pretty-printing",

                // to flash application by GDB/OpenOCD/NuLink
                "monitor flash write_image erase build//nuc029kge_fw.bin",
                "monitor reset halt",
            ]                          
        },
        {
          "cwd": "${workspaceRoot}",
          "executable": "./build/nuc029kge_fw.elf",
          "name": "Debug with OpenOCD for Mac",
          "request": "launch",
          "type": "cortex-debug",
          "servertype": "openocd",
          "serverArgs": [],
          "serverpath": "/Users/hancheol/hdd/tools/nuvoton/openocd/bin/openocd",
          "searchDir": ["/Users/hancheol/hdd/tools/nuvoton/openocd/share/openocd/scripts"],            
          "configFiles": [
              "interface/nulink.cfg",
              "target/numicroM0.cfg",
          ],
          "preLaunchCommands": [],          
          "runToEntryPoint": "main",
          "showDevDebugOutput" :"none",
      }      
    ]
